{
  "name": "plop-action-eslint",
  "description": "Use ESLint to format generated code with plop.js",
  "version": "0.3.0",
  "author": {
    "name": "Stefan Natter",
    "url": "https://natterstefan.me"
  },
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "LICENSE"
  ],
  "engines": {
    "node": "^14.13.1 || ^16.x || ^18.x"
  },
